{
    "name": "felixdorn/onboard",
    "description": "Track user onboarding steps.",
    "license": "MIT",
    "authors": [
        {
            "name": "FÃ©lix Dorn",
            "email": "github@felixdorn.fr"
        }
    ],
    "require": {
        "php": "^8.1",
        "honda/url-pattern-matcher": "^1.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "orchestra/testbench": "^6",
        "pestphp/pest": "^1",
        "phpstan/phpstan": "^1",
        "symfony/var-dumper": "^5.2.0"
    },
    "autoload": {
        "psr-4": {
            "Felix\\Onboard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Felix\\Onboard\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Felix\\Onboard\\Providers\\OnboardServiceProvider"
            ],
            "aliases": {
                "Onboard": "Felix\\Onboard\\Facades\\Onboard"
            }
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ],
        "test:9x": [
            "composer require orchestra/testbench:^7 --no-interaction --dev --no-update",
            "@test"
        ],
        "test:8x": [
            "composer require orchestra/testbench:^6 --no-interaction --dev --no-update",
            "@test"
        ]
    }
}
